/* pages/sendFinish/sendFinish.wxss */

.send {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  align-items: center;
  text-align: center;
  font-family: PingFangSC-Regular;
}

.send-title {
  font-size: 30rpx;
  margin-top: 84rpx;
  color: #666;
}

.send-view {
  display: flex;
  margin-top: 30rpx;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx;
  -webkit-box-shadow: 0 0 20px rgba(0, 10, 10, 0.1);
  -moz-box-shadow: 0 0 20px rgba(0, 10, 10, 0.1);
  box-shadow: 0 0 20px rgba(0, 10, 10, 0.1);
}

.send-view-txt {
  margin-left: 22rpx;
  font-size: 36rpx;
  color: #333;
}

