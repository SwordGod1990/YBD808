/* pages/company/fillInCompany/fillInCompany.wxss */

page {
    width: 100%;
    background: #f2f2f7;
}

.fill-in-company-container {
    margin-bottom: 150rpx;
}

.choose-company-view {
    background: white;
    height: 100rpx;
    width: 100%;
    line-height: 100rpx;
    text-align: center;
    position: relative;
}

.choose-company-view text {
    font-size: 30rpx;
    color: #4a90e2;
}

.choose-company-view image {
    width: 18rpx;
    height: 32rpx;
    position: absolute;
    margin-top: 36rpx;
    margin-left: 10rpx;
}

.company-info-view {
    background: white;
    margin-top: 20rpx;
}

.item-view {
    height: 100rpx;
    margin-left: 30rpx;
    padding-right: 30rpx;
    line-height: 100rpx;
    position: relative;
    border-bottom: 1rpx solid #e6e6e6;
}

.left-txt {
    font-size: 30rpx;
    color: #4d4d4d;
    position: absolute;
    top: 0;
}

.left-txt-after {
    font-size: 30rpx;
    color: #4d4d4d;
    position: absolute;
    top: 0;
}

.left-txt::after {
    content: '*';
    font-size: 30rpx;
    color: #eb3e2d;
}

.input-txt {
    font-size: 30rpx;
    color: #333;
    height: 100rpx;
}

.holder-txt {
    font-size: 30rpx;
    color: #999;
}

.input-view {
    padding-left: 175rpx;
    text-align: right;
    padding-right: 40rpx;
    display: block;
}

.input-view-right {
    padding-left: 175rpx;
    text-align: right;
}

.arrow-img {
    height: 36rpx;
    width: 18rpx;
    position: absolute;
    top: 0;
    right: 30rpx;
    margin-top: 32rpx;
}

.company-img-view {
    height: 475rpx;
    background: white;
    margin-top: 22rpx;
    padding-top: 15rpx;
    padding-right: 30rpx;
    padding-left: 30rpx;
}

.company-img-view text {
    font-size: 30rpx;
    color: #4d4d4d;
    margin-top: 30rpx;
}

.company-img-view image {
    height: 340rpx;
    width: 100%;
    margin-top: 30rpx;
    background: gainsboro;
    border-radius: 12rpx;
    display: block;
}

.not-img-view{
    height: 340rpx;
    width: 100%;
    margin-top: 30rpx;
    background: #f5f5f5;
    border-radius: 12rpx;
    position: relative;
    display: block;
}

.not-img-view image{
    height: 132rpx;
    width: 152rpx;
    position: absolute;
    left: 50%;
    margin-left: -66rpx;
    margin-top: 95rpx;
}

.service-txt-view {
    font-size: 26rpx;
    color: #666;
    letter-spacing: 0;
    text-align: center;
    width: 100%;
    margin-top: 80rpx;
}

.service-txt-view::after {
    content: '400-666-9196';
    color: #4a90e2;
}

.button-view1 {
    position: fixed;
    bottom: 40rpx;
    left: 40rpx;
    right: 40rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-image: linear-gradient(90deg, #e02e24 0%, #ff583e 100%);
    box-shadow: 0 4px 10px 0 rgba(224, 46, 36, 0.50);
    border-radius: 40rpx;
    color: white;
    font-size: 36rpx;
}

.button-view1::after {
    border: 0;
    outline: none;
}

.time-view {
    position: absolute;
    bottom: -300px;
    height: 210px;
    background: white;
    width: 100%;
}

.time-picker {
    height: 170px;
    width: 100%;
}

.picker-view-column {
    line-height: 50px;
    font-size: 32rpx;
    text-align: center;
}

.button-view {
    height: 50px;
    width: 100%;
    background: white;
    border-bottom: 1rpx solid #e5e5e5;
    border-top: 1rpx solid #e5e5e5;
    z-index: 200;
}

.button-cancel {
    display: inline-block;
    line-height: 50px;
    text-align: center;
    border-radius: 0px;
    padding-left: 30rpx;
    padding-right: 30rpx;
    color: gray;
    background: white;
}

.choosetext {
    display: inline-block;
    line-height: 50px;
    text-align: center;
    border-radius: 0px;
    font-size: 36rpx;
    margin-left: 170rpx;
    background: white;
    font-family: PingFangSC-Regular;
    color: #333;
}

.choosetext:after {
    border: 0;
    outline: none;
}

.button-cancel:after {
    border: 0;
    outline: none;
}

.button-sure {
    display: inline-block;
    padding-left: 30rpx;
    padding-right: 30rpx;
    line-height: 50px;
    text-align: center;
    border-radius: 0px;
    position: absolute;
    right: 0;
    color: #eb3e2d;
    background: white;
}

.button-sure:after {
    border: 0;
    outline: none;
}

.time-picker-view-bg {
    background-color: rgba(0, 0, 0, 0.3);
    height: 100vh;
    width: 100%;
    z-index: 9999;
    overflow: hidden;
    position: absolute;
    top: 0;
}
