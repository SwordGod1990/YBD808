/* pages/company/user/user.wxss */

page {
    width: 100%;
    height: 100%;
    background: #f2f2f7;
}

.user-info-view {
    height: 260rpx;
    width: 100%;
    background-image: linear-gradient(180deg, #eb3e2d 0%, #ff7353 100%);
    position: relative;
}

.user-img {
    height: 136rpx;
    width: 136rpx;
    border-radius: 50%;
    margin-left: 48rpx;
    margin-top: 62rpx;
    background: white;
}

.user-view {
    display: inline-block;
    position: absolute;
    margin-top: 84rpx;
    margin-left: 36rpx;
}

.user-name {
    font-size: 40rpx;
    color: #fff;
    display: block;
}

.user-mobile {
    font-size: 32rpx;
    color: #fff;
    display: block;
    margin-top: 15rpx;
}

.company-info-view {
    margin-top: 22rpx;
}

.current-company-view {
    height: 100rpx;
    background: white;
    position: relative;
    line-height: 100rpx;
}

.left-txt {
    font-size: 30rpx;
    color: #4d4d4d;
    margin-left: 30rpx;
}

.company-name-txt {
    display: inline-block;
    white-space: nowrap;
    overflow: hidden;
    margin-left: 150rpx;
    text-overflow: ellipsis;
}

.right-txt {
    font-size: 30rpx;
    color: #333;
    position: absolute;
    right: 60rpx;
    width: 450rpx;
    text-align: right;
}

.holder-txt {
    color: #b3b3b3;
}

.right-arrow-img {
    width: 18rpx;
    height: 36rpx;
    position: absolute;
    right: 30rpx;
    margin-top: 32rpx;
}

.service-tel-view {
    position: absolute;
    bottom: 158rpx;
    font-size: 26rpx;
    color: #808080;
    text-align: center;
    width: 100%;
}

.service-tel-txt {
    color: #4a90e2;
}

.quite-account-btn {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    color: #333;
    background: white;
    margin-top: 22rpx;
}

.quite-account-btn::after {
    border: 0;
    outline: none;
}

.scan-login {
    height: 100rpx;
    background: white;
    line-height: 100rpx;
    margin-top: 20rpx;
     padding-right: 30rpx; 
    display: flex;
}

.scan-login-title {
    font-size: 30rpx;
    color: #4d4d4d;
    margin-left: 30rpx;
    flex: 1;
}

.scan-login-status-view {
    font-size: 30rpx;
    color: #ff6c07;
     text-align: right; 
    line-height: 100rpx;
    position: relative;
    
}

.scan-login-status-view text {
    display: inline-block;
    vertical-align: top;
}

.scan-login-status-view image {
    width: 18rpx;
    height: 36rpx;
    margin-left: 15rpx;
    display: inline-block;
    padding-top: 32rpx;
    line-height: 100rpx;
}
