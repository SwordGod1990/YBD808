page {
    width: 100%;
    background: #f2f2f7;
}

.fill-in-company-container {
    margin-bottom: 50rpx;
}

.choose-company-view {
    height: 100rpx;
    width: 100%;
    line-height: 100rpx;
}

.choose-company-view text {
    font-size: 32rpx;
    color: #666;
    margin-left: 52rpx;
    font-weight: bold;
}

.choose-company-view text::before {
    content: '';
    width: 12rpx;
    height: 12rpx;
    display: block;
    border-radius: 50%;
    margin-left: 30rpx;
    margin-top: 44rpx;
    position: absolute;
    background: #eb3e2d;
}

.company-info-view {
    background: white;
}

.item-view {
    height: 100rpx;
    margin-left: 30rpx;
    padding-right: 30rpx;
    line-height: 100rpx;
    position: relative;
    border-bottom: 1rpx solid #e6e6e6;
}

.left-txt {
    font-size: 30rpx;
    color: #4d4d4d;
    position: absolute;
    top: 0;
}

.left-txt-after {
    font-size: 30rpx;
    color: #4d4d4d;
    position: absolute;
    top: 0;
}

.left-txt::after {
    content: '*';
    font-size: 30rpx;
    color: #eb3e2d;
}

.input-txt {
    font-size: 30rpx;
    color: #333;
    height: 100rpx;
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.holder-txt {
    font-size: 30rpx;
    color: #999;
}

