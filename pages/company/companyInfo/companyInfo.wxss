}

.company-img-view text {
    font-size: 30rpx;
    color: #4d4d4d;
    margin-top: 30rpx;
}

.company-img-view image {
    height: 340rpx;
    width: 100%;
    margin-top: 20rpx;
    background: #f5f5f5;
    border-radius: 12rpx;
    display: block;
}

.not-img-view{
    height: 340rpx;
    width: 100%;
    margin-top: 20rpx;
    background: #f5f5f5;
    border-radius: 12rpx;
    position: relative;
    display: block;
}

.not-img-view image{
    height: 132rpx;
    width: 152rpx;
    position: absolute;
    left: 50%;
    margin-left: -66rpx;
    margin-top: 95rpx;
}

.service-txt-view {
    font-size: 26rpx;
    color: #666;
    letter-spacing: 0;
    text-align: center;
    width: 100%;
    margin-top: 80rpx;
    padding-bottom: 30rpx;
}

.service-txt-view::after {
    content: '400-666-9196';
    color: #4a90e2;
}

