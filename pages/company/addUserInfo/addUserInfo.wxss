/* pages/company/addUserInfo/addUserInfo.wxss */
@import "/template/toast/toast.wxss";

.toast-view {
    height: 100vh;
    width: 100%;
    overflow-y: hidden;
    position: absolute;
    z-index: 10;
    top: 0;
    background: rgba(0, 0, 0, 0.40);
}

page {
    width: 100%;
    height: 100vh;
    background: #f2f2f7;
}

.add-user-info-container {
    padding-top: 20rpx;
}

.item-view {
    position: relative;
    height: 100rpx;
    line-height: 100rpx;
    background: white;
    border-bottom: 1rpx solid #e6e6e6;
}

.left-txt {
    position: absolute;
    margin-left: 30rpx;
}

.left-txt-after{
    position: absolute;
    margin-left: 30rpx;
}

.left-txt-after::after{
    content: '*';
    font-size: 30rpx;
    color: #EB3E2D;

}

.left-txt-color-zise {
    font-size: 30rpx;
    color: #4d4d4d;
}

.placeholder-text {
    font-size: 30rpx;
    color: #b3b3b3;
}

.input-user-name {
    text-align: right;
    height: 100rpx;
    display: block;
    margin-left: 165rpx;
    line-height: 100rpx;
    padding-right: 30rpx;
}

.right-img {
    width: 18rpx;
    height: 36rpx;
    position: absolute;
    right: 30rpx;
    margin-top: 32rpx;
}

.right-txt {
    position: absolute;
    right: 0;
    margin-right: 58rpx;
}

.right-color-size {
    font-size: 30rpx;
    color: #333;
}

.save-btn {
    background-image: linear-gradient(90deg, #e02e24 0%, #ff583e 100%);
    box-shadow: 0 4px 10px 0 rgba(224, 46, 36, 0.50);
    font-size: 36rpx;
    color: #fff;
    letter-spacing: 0;
    height: 80rpx;
    border-radius: 40rpx;
    margin-top: 82rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    line-height: 80rpx;
}

.save-btn::after {
    border: 0;
    outline: none;
}

.add-input-txt {
    font-size: 30rpx;
    color: #333;
    letter-spacing: -0.36px;
}


.time-view {
    position: absolute;
    bottom: -300px;
    height: 210px;
    background: white;
    width: 100%;
}

.time-picker {
    height: 170px;
    width: 100%;
}

.picker-view-column {
    line-height: 50px;
    font-size: 32rpx;
    text-align: center;
}

.button-view {
    height: 50px;
    width: 100%;
    background: white;
    border-bottom: 1rpx solid #e5e5e5;
    border-top: 1rpx solid #e5e5e5;
    z-index: 200;
}

.button-cancel {
    display: inline-block;
    line-height: 50px;
    text-align: center;
    border-radius: 0px;
    padding-left: 30rpx;
    padding-right: 30rpx;
    color: gray;
    background: white;
}

.choosetext {
    display: inline-block;
    line-height: 50px;
    text-align: center;
    border-radius: 0px;
    font-size: 36rpx;
    margin-left: 170rpx;
    background: white;
    font-family: PingFangSC-Regular;
    color: #333;
}

.choosetext:after {
    border: 0;
    outline: none;
}

.button-cancel:after {
    border: 0;
    outline: none;
}

.button-sure {
    display: inline-block;
    padding-left: 30rpx;
    padding-right: 30rpx;
    line-height: 50px;
    text-align: center;
    border-radius: 0px;
    position: absolute;
    right: 0;
    color: #eb3e2d;
    background: white;
}

.button-sure:after {
    border: 0;
    outline: none;
}

.time-picker-view-bg {
    background-color: rgba(0, 0, 0, 0.3);
    height: 100vh;
    width: 100%;
    z-index: 9999;
    overflow: hidden;
    position: absolute;
    top: 0;
}
