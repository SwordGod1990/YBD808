/* pages/company/bindCompany/bindCompany.wxss */

page {
    background: #f2f2f7;
    background: white;
    height: 100vh;
}

.default-page-view {
    text-align: center;
    position: fixed;
    top: 300rpx;
    left: 0;
    right: 0;
}

.bind-container-view {
    text-align: center;
    margin: auto;
    /* margin-top: 300rpx;  */
}

.drug-img {
    height: 250rpx;
    width: 298rpx;
}

.hint-txt1 {
    font-size: 30rpx;
    color: #666;
    letter-spacing: 0;
    display: block;
    margin-top: 36rpx;
}

.hint-txt2 {
    font-size: 26rpx;
    color: #999;
    letter-spacing: 0;
    display: block;
    margin-top: 20rpx;
}

.bind-button {
    background-image: linear-gradient(90deg, #e02e24 0%, #ff583e 100%);
    box-shadow: 0 4px 10px 0 rgba(224, 46, 36, 0.50);
    height: 80rpx;
    width: 320rpx;
    border-radius: 40rpx;
    color: white;
    font-size: 36rpx;
    line-height: 80rpx;
    margin-top: 60rpx;
}

.search-company-view {
    position: fixed;
    margin-top: 22rpx;
    width: 100%;
    z-index: 2;
    top: 0;
    background: white;
}

.search-company-input {
    background: #f7f7f7;
    border-radius: 35px;
    font-size: 30rpx;
    color: #333;
    height: 70rpx;
    margin-left: 30rpx;
    padding-left: 90rpx;
    line-height: 70rpx;
    margin-right: 110rpx;
}

.holder-input-txt {
    font-size: 30rpx;
    color: #999;
}

.search-img {
    height: 39rpx;
    width: 42rpx;
    position: absolute;
    top: 16rpx;
    left: 60rpx;
}

.search-txt {
    font-size: 30rpx;
    color: #333;
    position: absolute;
    right: 30rpx;
    top: 16rpx;
}

.search-content {
    /* height: 100%; *//* min-height: calc(100vh - 130rpx); */
    margin-top: 110rpx;
    width: 100%;
    background: white;
    border-top: 1rpx solid #e5e5e5;
    padding-bottom: 210rpx;
}

.company-item-view {
    height: 123rpx;
    width: 100%;
    border-bottom: 1rpx solid #e5e5e5;
    margin-left: 30rpx;
}

.company-name-txt {
    font-size: 30rpx;
    color: #333;
    padding-top: 20rpx;
    display: block;
}

.compang-addr-txt {
    font-size: 26rpx;
    color: #999;
    letter-spacing: 0.1;
}

.no-search-view {
    height: 174rpx;
    font-size: 26rpx;
    display: block;
    text-align: center;
    color: #666;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: white;
    border-top: 1rpx solid #e5e5e5;
    padding-top: 30rpx;
}

.button-view {
    background-image: linear-gradient(90deg, #e02e24 0%, #ff583e 100%);
    box-shadow: 0 4px 10px 0 rgba(224, 46, 36, 0.50);
    font-size: 36rpx;
    color: #fff;
    letter-spacing: 0;
    height: 80rpx;
    border-radius: 40rpx;
    margin-top: 20rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    line-height: 80rpx;
    margin-bottom: 30rpx;
}

.button-view::after {
    border: 0;
    outline: none;
}

.error-img {
    width: 197rpx;
    height: 256rpx;
}

.error-txt {
    margin-top: 20rpx;
    display: block;
    font-size: 30rpx;
    color: #666;
}
