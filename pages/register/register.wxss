/* pages/company/register/register.wxss */

.register {
    margin-left: 50%;
}

.register-view {
    background: #fcf8e2;
    box-shadow: 0 2px 8px 0 rgba(56, 32, 6, 0.08);
    height: 200rpx;
    width: 200rpx;
    border-radius: 50%;
    text-align: center;
    margin-left: -100rpx;
    margin-top: 80rpx;
    margin-bottom: 25rpx;
}

.register-view2 {
    background: #daecff;
    box-shadow: 0 2px 8px 0 rgba(6, 33, 56, 0.08);
    height: 200rpx;
    width: 200rpx;
    border-radius: 50%;
    text-align: center;
    margin-left: -100rpx;
    margin-top: 80rpx;
    margin-bottom: 25rpx;
}

.register-img {
    height: 100rpx;
    width: 100rpx;
    margin-top: 50rpx;
}

.user-input {
    position: relative;
    border-bottom: 1rpx solid #e43427;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 47rpx;
    height: 70rpx;
}

.pass-input{
    position: relative;
    margin-right: 370rpx;
    margin-top: 47rpx;
    height: 70rpx;
}

.input-txt {
    font-size: 30rpx;
    color: #333;
}

.holder-txt {
    font-size: 30rpx;
    color: #b3b3b3;
}

.auth-code-view {
    position: relative;
    border-bottom: 1rpx solid #e43427;
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.auth-code {
    font-size: 28rpx;
    color: #ff6253;
    display: inline-block;
    background: #f4f4f4;
    padding: 12rpx;
    border-radius: 35rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    position: absolute;
    right: 30rpx;
    top: 0;
    z-index: 10;
}

.delete-img {
    height: 38rpx;
    width: 38rpx;
    background: #f4f4f4;
    border-radius: 50%;
    position: absolute;
    top: 10rpx;
    right: 275rpx;
    z-index: 10;
}

.register-btn {
    font-size: 36rpx;
    color: #fff;
    letter-spacing: 0;
    margin-left: 40rpx;
    margin-right: 40rpx;
    background-image: linear-gradient(90deg, #e02e24 0%, #ff583e 100%);
    box-shadow: 0 4px 10px 0 rgba(224, 46, 36, 0.50);
    height: 80rpx;
    border-radius: 40rpx;
    margin-top: 100rpx;
    line-height: 80rpx;
}

.register-opacity {
    opacity: 0.7;
    color: #FDE9E7;
}

.register-btn::after {
    border: 0;
    outline: none;
}

.register-hint {
    font-size: 30rpx;
    color: #666;
    letter-spacing: 0;
    display: block;
    margin-top: 50rpx;
    text-align: center;
}
