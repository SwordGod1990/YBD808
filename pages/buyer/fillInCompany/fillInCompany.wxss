/* pages/buyer/addCompanyInfo/addCompanyInfo.wxss */

page {
    width: 100%;
    background: #f2f2f7;
}

.company-info-view {
    background: white;
}

.item-view {
    height: 100rpx;
    margin-left: 30rpx;
    padding-right: 30rpx;
    line-height: 100rpx;
    position: relative;
    border-bottom: 1rpx solid #e6e6e6;
}

.input-view {
    padding-left: 175rpx;
    text-align: right;
    padding-right: 40rpx;
}

.arrow-img {
    height: 36rpx;
    width: 18rpx;
    position: absolute;
    top: 0;
    right: 30rpx;
    margin-top: 32rpx;
}

.left-txt {
    font-size: 30rpx;
    color: #4d4d4d;
    position: absolute;
    top: 0;
}

.left-txt-after {
    font-size: 30rpx;
    color: #4d4d4d;
    position: absolute;
    top: 0;
}

.left-txt::after {
    content: '*';
    font-size: 30rpx;
    color: #eb3e2d;
}

.input-txt {
    font-size: 30rpx;
    color: #333;
    height: 100rpx;
    display: block;
}

.holder-txt {
    font-size: 30rpx;
    color: #999;
}

.input-view-right {
    padding-left: 175rpx;
    text-align: right;
}

.service-view {
    font-size: 26rpx;
    color: #666;
    text-align: center;
    position: absolute;
    bottom: 150rpx;
    left: 0;
    right: 0;
}

.service-view text {
    font-size: 26rpx;
    color: #4a90e2;
    letter-spacing: 0;
}

.btn-view {
    background-image: linear-gradient(90deg, #e02e24 0%, #ff583e 100%);
    box-shadow: 0 4px 10px 0 rgba(224, 46, 36, 0.50);
    font-size: 36rpx;
    color: #fff;
    letter-spacing: 0;
    height: 80rpx;
    border-radius: 40rpx;
    margin-top: 82rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    line-height: 80rpx;
    position: absolute;
    bottom: 40rpx;
    left: 0;
    right: 0;
}

.btn-view::after {
    border: 0;
    outline: none;
}


.time-view {
    position: absolute;
    bottom: -300px;
    height: 210px;
    background: white;
    width: 100%;
}

.time-picker {
    height: 170px;
    width: 100%;
}

.picker-view-column {
    line-height: 50px;
    font-size: 32rpx;
    text-align: center;
}

.button-view {
    height: 50px;
    width: 100%;
    background: white;
    border-bottom: 1rpx solid #e5e5e5;
    border-top: 1rpx solid #e5e5e5;
    z-index: 200;
}

.button-cancel {
    display: inline-block;
    line-height: 50px;
    text-align: center;
    border-radius: 0px;
    padding-left: 30rpx;
    padding-right: 30rpx;
    color: gray;
    background: white;
}

.choosetext {
    display: inline-block;
    line-height: 50px;
    text-align: center;
    border-radius: 0px;
    font-size: 36rpx;
    margin-left: 170rpx;
    background: white;
    font-family: PingFangSC-Regular;
    color: #333;
}

.choosetext:after {
    border: 0;
    outline: none;
}

.button-cancel:after {
    border: 0;
    outline: none;
}

.button-sure {
    display: inline-block;
    padding-left: 30rpx;
    padding-right: 30rpx;
    line-height: 50px;
    text-align: center;
    border-radius: 0px;
    position: absolute;
    right: 0;
    color: #eb3e2d;
    background: white;
}

.button-sure:after {
    border: 0;
    outline: none;
}

.time-picker-view-bg {
    background-color: rgba(0, 0, 0, 0.3);
    height: 100vh;
    width: 100%;
    z-index: 9999;
    overflow: hidden;
    position: absolute;
    top: 0;
}

.btnclick {
    background: #0082c6;
}

.picker-txt{
    font-size: 32rpx;
    color: #333;
}
