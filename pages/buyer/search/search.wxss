@import "/template/toast/toast.wxss";

.toast-view {
    height: 100vh;
    width: 100%;
    overflow-y: hidden;
    position: fixed;
    z-index: 11;
    top: 0;
    background: rgba(0, 0, 0, 0.40);
}

page {
    width: 100%;
    /* height: 100%;  *//* background: #f2f2f7; */
    background: #fff;
}

.search-view {
    position: fixed;
    width: 100%;
    z-index: 2;
    top: 0;
    background: white;
    padding-bottom: 30rpx;
    border-bottom: 1rpx solid #e5e5e5;
}

.search-input-view {
    background: #f7f7f7;
    border-radius: 50rpx;
    margin-top: 30rpx;
    margin-left: 30rpx;
    margin-right: 110rpx;
    padding-right: 80rpx;
    overflow: hidden;
    height: 70rpx;
    padding-left: 90rpx;
    font-size: 30rpx;
    color: #333;
}

.search-input-text {
    width: 110rpx;
    position: absolute;
    right: 0;
    top: 30rpx;
    /* background: red; */
    text-align: center;
    font-size: 30rpx;
    color: #333;
    height: 70rpx;
    line-height: 70rpx;
}

.input-clear-img {
    width: 44rpx;
    height: 44rpx;
    position: absolute;
    top: 45rpx;
    right: 130rpx;
    z-index: 2;
}

.input-search-img {
    width: 42rpx;
    height: 39rpx;
    position: absolute;
    top: 47rpx;
    left: 60rpx;
    z-index: 2;
}

.search-content-view {
    padding-top: 130rpx;
    background: white;
    padding-left: 30rpx;
    padding-bottom: 130rpx;
}

.drug-item-view {
    position: relative;
    padding-bottom: 25rpx;
    border-bottom: 1rpx solid #e5e5e5;
    padding-right: 30rpx;
}

.drug-name {
    font-size: 30rpx;
    color: #333;
    display: block;
    padding-top: 25rpx;
    margin-bottom: 5rpx;
    word-break: break-all;
    word-wrap: break-word;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.drug-unit {
    font-size: 26rpx;
    color: #999;
    display: block;
    margin-top: 14rpx;
}

.drug-update-view {
    position: absolute;
    right: 30rpx;
    top: 59rpx;
}

.minus-img {
    width: 44rpx;
    height: 44rpx;
    vertical-align: text-bottom;
}

.drug-update-view text {
    font-size: 36rpx;
    color: #333;
    height: 44rpx;
    line-height: 44rpx;
    display: inline-block;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.bottom-content-view {
    position: relative;
}

.text-num-style {
    font-size: 30rpx;
    color: #eb3e2d;
}

.text-content-style {
    font-size: 30rpx;
    color: #666;
}

.super-view {
    width: 88rpx;
    height: 200rpx;
    background: rgba(0, 0, 0, 0.50);
    border-radius: 57px;
    position: fixed;
    right: 30rpx;
    bottom: 264rpx;
}

.rich-scan-view {
    height: 100rpx;
    width: 56rpx;
    border-bottom: 1rpx solid white;
    margin-left: 16rpx;
    margin-right: 16rpx;
}

.rich-scan-view image {
    height: 44rpx;
    width: 44rpx;
    margin-top: 29rpx;
    margin-left: 6rpx;
}

.manually-add-view {
    height: 100rpx;
    width: 88rpx;
}

.manually-add-view image {
    height: 44rpx;
    width: 44rpx;
    margin-top: 29rpx;
    margin-left: 22rpx;
}

