.reload-view {
    text-align: center;
    width: 100%;
    height: 100%;
    background: rgb(242, 242, 247);
}

.reload-text {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #808080;
}

.reload-img {
    width: 280rpx;
    height: 280rpx;
    margin-top: 340rpx;
}

.reload-btn {
    margin-top: 80rpx;
    height: 80rpx;
    width: 280rpx;
    border-radius: 40rpx;
    line-height: 80rpx;
    color: white;
    background-image: linear-gradient(90deg, #e02e24 0%, #ff583e 100%);
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    letter-spacing: 0;
}
